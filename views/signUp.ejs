<%- include('./partials/header.ejs') %>

<body>
  <nav>
    <%- include('./partials/pages.ejs') %>
  </nav>
  <h2>Sign Up</h2>
  <form action="/" method="POST" class="login-text">
    <label for="username"><b>New Username</b></label>
    <input type="text" placeholder="Enter New Username" name="username" required>

    <label for="password"><b>New Password</b></label>
    <input type="password" placeholder="Enter New Password" name="password" required>

    <!-- should NOT be a post request below -->
    <button type="submit">Signup</button>
  </form>
  <button type="submit" onclick="location.href='/';">Back to Login</button>
</body>

</html>